<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_preview_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:scaleType="centerInside"
            android:src="@drawable/gas" />

        <TextView
            android:id="@+id/product_preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_preview_img"
            android:padding="5dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica_light"
            android:maxLines="2"
            android:text="Product Title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/product_preview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:padding="5dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/helvetica"
            android:text="$100.00"
            android:textColor="@color/flat_blue_1"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>